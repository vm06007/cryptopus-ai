{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Octopus AI Chats",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "_id": {
                "type": "string",
                "format": "uuid",
                "coerce": true
            },
            "user": {
                "type": "string",
                "format": "uuid"
            },
            "interactions": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "question": {
                            "type": "string"
                        },
                        "response": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "question",
                        "response"
                    ]
                },
                "minItems": 1
            }
        }
    }
}